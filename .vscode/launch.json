{
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug in Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}",
      "sourceMaps": true,
      "userDataDir": "${workspaceRoot}/../../_chrome",
      "runtimeArgs": [
        "--profile-directory=debug-profile"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current file",
      "program": "${file}",
      "runtimeArgs": [
        "-r",
        "@babel/register"
      ]
    }
  ]
}